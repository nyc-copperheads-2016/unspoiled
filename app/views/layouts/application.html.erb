<!DOCTYPE html>
<html>
<head>
  <title>Unspoiled</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<h1><%= link_to "Unspoiled", root_path %></h1>
<% if current_user %>
  Welcome <%= link_to current_user.username, user_path(current_user) %>
    <%= link_to 'Logout', logout_path(current_user.id), method: "delete" %>
  <% else %>
    <%= render "sessions/new" %>
    <%= link_to "Create Account", new_user_path %>
<% end %>
<body>

<%= yield %>

</body>
</html>
