<div id="user-preferences">
  <h2><span><%= @user.username %>'s profile</span></h2>
  <h4>selected filters: </h4>
  <% @user.preferences.each do |preference| %>
   <p>
     <span>
      <strong><%= preference.media.title %></strong>
      <span id = "on-off">
        status: <span id = "filter-on-off-<%= preference.id %>"><%= link_to on_or_off(preference), user_preference_path(current_user, preference.id) %></span>
      </span>
      <span id = "delete-filter">
        <span id = "filter-delete-<%= preference.id %>"> <%= link_to 'delete', user_preference_path(current_user, preference.id) %></span>
      </span>
    </span>
   </p>
  <% end %>
</div>


